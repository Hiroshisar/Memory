<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memory.MainPage"
             BackgroundColor="#1E1E2E">

    <Grid Padding="20"
          RowSpacing="15"
          ColumnSpacing="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titolo -->
            <RowDefinition Height="*"/>
            <!-- Griglia di gioco -->
            <RowDefinition Height="Auto"/>
            <!-- Barra inferiore -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackLayout Grid.Row="0"
                     HorizontalOptions="Center"
                     VerticalOptions="Start"
                     Spacing="4">
            <Label Text="🎴 Memory Game 🎴"
                   FontAttributes="Bold"
                   FontSize="36"
                   TextColor="#E0E0FF"
                   HorizontalOptions="Center"/>
            <Label Text="Trova tutte le coppie nel minor numero di mosse!"
                   FontSize="16"
                   TextColor="#CCCCCC"
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- CARDS GRID -->
        <Frame Grid.Row="1"
               BackgroundColor="#2A2A40"
               CornerRadius="20"
               Padding="15"
               HasShadow="True">
            <Grid x:Name="CardGrid"
                  RowSpacing="6"
                  ColumnSpacing="6"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"/>
        </Frame>

        <!-- BOTTOM BAR -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,Auto,*"
              Padding="0,10">

            <!-- Score & Tries -->
            <StackLayout Grid.Column="0"
                         Orientation="Vertical"
                         HorizontalOptions="Start"
                         Spacing="2">
                <Label Text="{Binding Score, StringFormat='Score: {0}'}"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#FFD700"/>

                <Label Text="{Binding Tries, StringFormat='Tries: {0}'}"
                       FontSize="16"
                       TextColor="#FFFFFF"/>

            </StackLayout>

            <!-- Reset Button -->
            <Button Text="↻ Reset"
                    Grid.Column="2"
                    Padding="14,8"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    FontSize="18"
                    BackgroundColor="#6C63FF"
                    TextColor="White"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Clicked="OnResetButtonClicked"/>
        </Grid>
    </Grid>
</ContentPage>
